{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "@typescript-eslint/no-floating-promises": [
            "error"
        ],
        "prettier/prettier": "error",
        // "no-multiple-empty-lines": [
        //     1,
        //     {
        //         "max": 1
        //     }
        // ],
        "lines-between-class-members": [
            // 0 = off, 1 = warn, 2 = error
            "1",
            "always"
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ]
    }
}